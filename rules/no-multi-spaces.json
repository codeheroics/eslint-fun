{
  "name": "no-multi-spaces",
  "description": "disallow use of multiple spaces",
  "isRecommended": false,
  "isFixable": true,
  "category": "Best Practices",
  "schema": [
    {
      "type": "object",
      "properties": {
        "exceptions": {
          "type": "object",
          "patternProperties": {
            "^([A-Z][a-z]*)+$": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  ]
}